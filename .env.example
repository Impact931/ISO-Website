# Environment Variables Template
# Copy to .env and fill in your actual values

# ===========================================
# MCP Server Configuration
# ===========================================

# Context7 MCP - Knowledge Management
CONTEXT7_API_KEY=your_context7_api_key_here

# Codex MCP - Code Review & Proofing (requires OpenAI API)
OPENAI_API_KEY=your_openai_api_key_here

# Figma MCP - Design Token Sync (uses OAuth via browser)
# Note: Figma MCP uses remote auth - no API key needed here

# ===========================================
# ISO Photo XP - Project Configuration
# ===========================================

# Database (Supabase/PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/iso_photoxp
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# API Configuration
API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ===========================================
# Future Integrations (Phase 2/3)
# ===========================================

# Zoho CRM Integration (Keep disabled until Phase 3)
ENABLE_ZOHO_SYNC=false
ZOHO_CLIENT_ID=your_zoho_client_id_here
ZOHO_CLIENT_SECRET=your_zoho_client_secret_here

# PhotoDay/GotPhoto Webhooks
ENABLE_GALLERY_WEBHOOKS=false
PHOTODAY_WEBHOOK_SECRET=your_webhook_secret_here

# Email Alerts
ENABLE_EMAIL_ALERTS=false

# ===========================================
# Development Environment
# ===========================================
NODE_ENV=development